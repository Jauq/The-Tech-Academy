@using QuotesForCarInsurance.ViewModels
@model List<QuoteVM>

<div class="row no-gutters m-3">
    <div class="card col-sm-12 col-md-10 col-lg-6 mx-auto shadow">
        <div class="card-header text-center">
            <h5 class="m-0">Quotes</h5>
        </div>
        <div class="card-body">
            @foreach (var quote in Model)
            {
                <input type="hidden" name="Id" value="@quote.Id" />
                <div class="row mb-3">
                    <div class="col-2">
                        @quote.MonthlyPrice.ToString("C2")
                    </div>
                    <div class="col-2">
                        @quote.FirstName
                    </div>
                    <div class="col">
                        @quote.LastName
                    </div>
                    <div class="col-4">
                        @quote.EmailAddress
                    </div>
                </div>
            }
        </div>
    </div>
</div>
